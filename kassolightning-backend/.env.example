# Lightning Network Daemon (LND) Configuration
LND_GRPC_HOST=localhost:10009  # Your LND gRPC host
LND_MACAROON=hex_encoded_macaroon  # The hex-encoded admin.macaroon
LND_TLS_CERT=/absolute/path/to/tls.cert  # Path to your tls.cert file
NETWORK=testnet  # or mainnet

# Firebase Configuration (if needed)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_PRIVATE_KEY=your-private-key

# Server Configuration
PORT=5000